<div class="hero2">
	<br />
	<div class="booyah-box col-10 offset-1 black">
		<h1 class="text-center">What is one of your Favorite Movies?</h1>
		<%= simple_form_for @movie, url: movies_path do |f| %>
			<%= f.input :title %>
			<%= f.input :comment %>
			<br />
			<%= f.submit "Submit", class: 'btn btn-danger col-10 offset-1' %>
			<br />
		<% end %>
		<br />
		<button class="btn btn-danger col-10 offset-1"><%= link_to "Home", root_path %></button>
		<br />
	</div>
</div>